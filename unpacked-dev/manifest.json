{
  "name": "Comments Sidebar for Youtube",
  "version": WARNING unpacked-dev is out of date,
  "manifest_version": 3,
  "description": "Allows you to watch videos and read comments at the same time on Youtube.",
  "icons": {
    "16": "img/icon.16.png",
    "32": "img/icon.32.png",
    "48": "img/icon.48.png",
    "128": "img/icon.128.png"
  },
  "author": "tberghuis",
  "homepage_url": "https://github.com/tberghuis/watch-and-read-comments-for-youtube",
  "permissions": ["storage", "http://localhost.com:8080/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "run_at": "document_end",
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["rxjs.js", "inject.js", "dom-elements.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],

  "content_security_policy": {
    "sandbox": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }
}
